@model BestBrightness.Models.PickupViewModel

@{
    ViewBag.Title = "Update Pickup";
}

<h2>Update Pickup Request</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PickupId)

    <div class="form-group">
        @Html.LabelFor(model => model.ProductId)
        @Html.TextBoxFor(model => model.ProductId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PickupDate)
        @Html.TextBoxFor(model => model.PickupDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Status)
        @Html.DropDownListFor(model => model.Status, new SelectList(new[] { "Requested", "Completed", "Cancelled" }), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Update Pickup</button>
}

@section Scripts {
    <script src="~/js/UpdatePickup.js"></script>
    <!--<script src="/js/auth.js"></script>-->
}
