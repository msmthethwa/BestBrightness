@model BestBrightness.Models.WarehouseOrder

@{
    ViewBag.Title = "Create Order";
}
<link href="~/css/WarehouseStyles.css" rel="stylesheet" type="text/css" />


<div class="create-order-container">
<h2>Create Order</h2>

@using (Html.BeginForm("CreateOrder", "Warehouse", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="ProductId">Product Name</label>
        @Html.DropDownListFor(m => m.ProductId, new SelectList(ViewBag.Stocks, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProductId)
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Quantity)
    </div>

    <div class="form-group">
        <label for="SupplierId">Supplier</label>
        @Html.DropDownListFor(m => m.SupplierId, new SelectList(ViewBag.Suppliers, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SupplierId)
    </div>


    <div class="form-group">
        <label for="OrderDate">Order Date</label>
        @Html.TextBoxFor(m => m.OrderDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.OrderDate)
    </div>

    <button type="submit" class="btn-submit">Create Order</button>
}
</div>


<style>
    .create-order-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #081b29; /* Dark background color */
        border: 1px solid #00a6bc; /* Cyan border */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

        .create-order-container h2 {
            color: #00ffff; /* Cyan text */
            border-bottom: 2px solid #00ffff; /* Cyan border */
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .create-order-container .form-group {
            margin-bottom: 20px;
        }

        .create-order-container label {
            display: block;
            font-size: 16px;
            margin-bottom: 5px;
            color: #fff; /* White text for labels */
        }

        .create-order-container .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 2px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: #fff; /* White background for input fields */
        }

            .create-order-container .form-control:focus {
                border-color: #00ffff; /* Cyan border on focus */
                outline: none;
                box-shadow: 0 0 5px rgba(0, 255, 255, 0.3); /* Cyan glow effect */
            }

        .create-order-container .btn-submit {
            background-color: #00ffff; /* Cyan button */
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .create-order-container .btn-submit:hover {
                background-color: #007a8a;
            }
</style>