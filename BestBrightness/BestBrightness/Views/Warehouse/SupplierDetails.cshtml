@model BestBrightness.Models.Supplier
@{
    ViewBag.Title = "Supplier Details";
}
<link href="~/css/WarehouseStyles.css" rel="stylesheet" type="text/css" />

<h2>Supplier Details</h2>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Contact Info:</strong> @Model.ContactInfo</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p>
        <a href="@Url.Action("Edit", "Supplier", new { id = Model.Id })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Delete", "Supplier", new { id = Model.Id })" class="btn btn-danger">Delete</a>
        <a href="@Url.Action("SupplierList", "Supplier")" class="btn btn-primary">Back to List</a>
    </p>
</div>
