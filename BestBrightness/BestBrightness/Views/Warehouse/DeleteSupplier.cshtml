@model BestBrightness.Models.Supplier

@{
    ViewBag.Title = "Delete Supplier";
}

<link href="~/css/WarehouseStyles.css" rel="stylesheet" type="text/css" />

<div class="container">
    <h2>Delete Supplier</h2>
    <form method="post" action="@Url.Action("RemoveSupplier", "Warehouse")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="alert alert-warning">
            <h4 class="alert-heading">Are you sure you want to delete this supplier?</h4>
            <p>Once deleted, this action cannot be undone.</p>
        </div>

        <div class="form-group">
            <label>Supplier Name:</label>
            <p>@Model.Name</p>
        </div>

        <div class="form-group">
            <label>Contact Info:</label>
            <p>@Model.ContactInfo</p>
        </div>

        <div class="form-group">
            <label>Address:</label>
            <p>@Model.Address</p>
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("SupplierList", "Warehouse")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #d9534f;
    }

    .alert {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
        border-radius: 5px;
    }

    .alert-heading {
        font-size: 1.5em;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    p {
        margin: 0;
        padding: 10px;
        background-color: #e9ecef;
        border-radius: 4px;
    }

    .btn {
        margin-top: 20px;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1em;
    }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
        color: #fff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
        margin-left: 10px;
    }

</style>