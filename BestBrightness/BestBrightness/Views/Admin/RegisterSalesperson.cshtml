@model BestBrightness.ViewModels.RegisterSalespersonViewModel

@{
    ViewData["Title"] = "Register Salesperson";
}

<h2>Register Salesperson</h2>

<div class="form-group">
    <form asp-action="RegisterSalesperson" method="post">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DefaultPassword" class="control-label"></label>
            <input asp-for="DefaultPassword" class="form-control" readonly />
            <span asp-validation-for="DefaultPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SalespersonId" class="control-label"></label>
            <input asp-for="SalespersonId" class="form-control" readonly />
            <span asp-validation-for="SalespersonId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
